<h1>Hello <%= @name %></h1>

<%= form_tag :action => 'sign_in' do %>
  <p>Enter your name: 
    <%= text_field_tag 'visitor_name', @name %></p>

  <%= submit_tag 'Sign in' %>
<% end %>

<p>Previous visitors:</p>
<% if @entries %>
<ul>
  <% @entries.each do |e| %>
  <li><%= e.name %></li>
  <% end %>
</ul>
<% end %>